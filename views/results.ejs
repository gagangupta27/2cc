<!DOCTYPE html>
<html>
<head>
  <title>Movies!!</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
  <style>
    .space{
      padding-right:10px;
    }
    .img{
      height:300px;
      width:100% ;
      border: 1px solid rgba(0,0,0,0.5);
      border-radius: 0.25rem;

    }
    .card1{
      margin-right: 40px;
      margin-bottom: 40px;
    }
    body{
      background-color: #0f171e;
      color: white;

    }

  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Movies</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/watchhistory">Watch history</a>
      </li>
    </ul>
    <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
    <form class="form-inline my-2 my-lg-0 space" action="/results" method="POST" >
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    <% if(!currentuser){ %>
    <li class="nav-item space">
      <a class="nav-link p-2" href="/signup"><i class="fas fa-user-plus"></i> Sign-up</a>
    </li>
    <li class="nav-item space">
      <a class="nav-link p-2" href="/login"><i class="fas fa-sign-in-alt"></i> login</a>
    </li>
    <% }else{ %>
    <li class="nav-item space">
      <a class="nav-link p-2" href="/profile/<%= currentuser.name %>"><i class="far fa-user"></i> <%= currentuser.name %></a>
    </li>
    <li class="nav-item space">
      <a class="nav-link p-2" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </li>
      <% } %>
  </ul>
  </div>
</nav>
<hr>





<div class="container">
  <div class="header"><h1>Movies</h1></div>
  <hr>
<div class="card-deck">
  <% result.forEach(function(sh){ %>
    <div class="card1">
      <a href="/shows/<%=sh.imdbID%>">
    <img class="img" src="<%=sh.Poster%>" alt="Card image" >
    </a>
    </div>
  <% }); %>
  </div>
</div>


</body>
</html>







